<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.v.view">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivitySlideConflict_1"
            android:configChanges="screenLayout" />
        <activity
            android:name=".activities.ActivitySlideConflict_2"
            android:configChanges="screenLayout" />

        <activity android:name=".activities.ActivityAnimation" />
        <activity android:name=".activities.ActivityLayoutAnimation"></activity>
    </application>

</manifest>